<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_columnSpan="@integer/col"
        android:layout_rowWeight="0"
        android:background="#aceadc"
        android:text="0"
        android:textColor="#202020"
        android:textSize="50sp"
        android:singleLine="true" />

    <GridLayout

        android:id="@+id/grid_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:columnCount="@integer/col"
        android:rowCount="@integer/row">


        <Button
            android:id="@+id/left_b"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text="("
            android:textColor="#000000"
            android:textStyle="normal|bold"
            android:textSize="30sp" />

        <Button
            android:id="@+id/left_bb"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text="["
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/right_b"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text=")"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/right_bb"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text="]"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clear"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text="清除"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/back"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="#c9cacc"
            android:onClick="onClick"
            android:text="后退"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/divide"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/符号"
            android:onClick="onClick"
            android:text="÷"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/符号"
            android:onClick="onClick"
            android:text="×"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="7"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="8"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="9"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/符号"
            android:onClick="onClick"
            android:text="-"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="4"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="5"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="6"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/符号"
            android:onClick="onClick"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="2"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="3"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="@color/符号"
            android:onClick="onClick"
            android:text="="
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:background="@color/lightskyblue"
            android:onClick="onClick"
            android:text="."
            android:textColor="#000000"
            android:textSize="20dp" />

    </GridLayout>

</LinearLayout>